<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#008800"
    tools:context="com.example.oluchianyabuike.myproject2.MainActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/first_layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:fontFamily="sans-serif-medium"
                style="@style/AppColors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serena"
                android:paddingTop="@dimen/top"
                android:textSize="@dimen/teamName"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <TextView
                style="@style/AppColors"
                android:fontFamily="sans-serif-light"
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_score"
                android:textSize="@dimen/score"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <TextView
                style="@style/AppColors"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/text_score"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+15 POINTS"
                android:onClick="pointA"
                style="@style/AppColors"
                android:background="@drawable/button_shape"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+10 POINTS"
                android:onClick="gamePointA"
                style="@style/AppColors"
                android:background="@drawable/button_shape"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp">

        </View>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venus"
                android:paddingTop="@dimen/top"
                android:fontFamily="sans-serif-medium"
                style="@style/AppColors"
                android:textSize="@dimen/teamName"
                android:id="@+id/textView1"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <TextView
                style="@style/AppColors"
                android:fontFamily="sans-serif-light"
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/init_score"
                android:textSize="@dimen/score"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <TextView
                style="@style/AppColors"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/text_b_score"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:padding="4dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+15 POINTS"
                android:onClick="pointB"
                style="@style/AppColors"
                android:background="@drawable/button_shape"
                android:layout_margin="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+10 POINTS"
                android:onClick="gamePointB"
                style="@style/AppColors"
                android:background="@drawable/button_shape"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:text="RESET"
        style="@style/AppColors"
        android:background="@drawable/button_shape" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="MENU"
        style="@style/AppColors"
        android:background="@drawable/button_shape" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ball"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

</RelativeLayout>
